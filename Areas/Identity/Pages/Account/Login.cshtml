@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}
<div class="pg-login-container">
    <div class="card pg-login-card bg-white rounded-3xl">
        <div class="card-body p-12">
            <h2 class="text-3xl font-bold text-center mb-2 text-gray-900">Sign in</h2>
            <p class="text-center text-gray-500 mb-6">
                Need an account?
                <a asp-page="./Register" class="font-medium text-lime-600 hover:text-lime-500">Sign up</a>
            </p>
            <form id="account" method="post" class="flex flex-col gap-6">
                <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-2" role="alert"></div>
                <div>
                    <label asp-for="Input.UserOrEmail" class="block text-sm font-medium text-gray-700">Username / Email</label>
                    <input asp-for="Input.UserOrEmail" class="input input-bordered w-full bg-white text-gray-900 border-gray-200 focus:ring-lime-400" autocomplete="username" aria-required="true" placeholder="กรอก Username หรือ Email" />
                    <span asp-validation-for="Input.UserOrEmail" class="text-red-500 text-xs"></span>
                </div>
                <div>
                    <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700">Password</label>
                    <input asp-for="Input.Password" class="input input-bordered w-full bg-white text-gray-900 border-gray-200 focus:ring-lime-400" autocomplete="current-password" aria-required="true" placeholder="กรอก Password" />
                    <span asp-validation-for="Input.Password" class="text-red-500 text-xs"></span>
                </div>
                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input asp-for="Input.RememberMe" class="h-4 w-4 text-lime-600 focus:ring-lime-400 border-gray-300 rounded" />
                        <label asp-for="Input.RememberMe" class="ml-2 block text-sm text-gray-900">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-lime-600 hover:bg-lime-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-lime-400">Sign In</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
